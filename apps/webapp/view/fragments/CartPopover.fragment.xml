<core:FragmentDefinition xmlns="sap.m"
    xmlns:f="sap.ui.layout.form"
    xmlns:layout="sap.ui.layout"
    xmlns:core="sap.ui.core">
    <Popover placement="Bottom" contentWidth="500px">

        <Table items="{path: 'items'}">
            <columns>
                <Column>
                    <Label text="{i18n>productName}" />
                </Column>
                <Column >
                    <Label text="{i18n>price}" />
                </Column>

                <Column />
            </columns>

            <items>
                <ColumnListItem vAlign="Middle" type="Navigation" press="navToProductFromCart">
                    <cells>
                        <ObjectIdentifier title="{product/name}" text="{product/theme}" />
                        <ObjectNumber number="{product/price}" unit="DKK" />
                    </cells>
                </ColumnListItem>
            </items>
        </Table>

        <f:SimpleForm layout="ResponsiveGridLayout" labelSpanXL="4" labelSpanL="3" labelSpanM="4" labelSpanS="12" adjustLabelSpan="false" emptySpanXL="0" emptySpanL="4" emptySpanM="0" emptySpanS="0" columnsXL="2" columnsL="1" columnsM="1" singleContainerFullSize="false">
            <f:content>
                <Label text="{i18n>totalDiscount}" />
                <Text text="{totalDiscount}" />

                <Label text="{i18n>totalPrice}" />
                <Text text="{totalAmount}" />
            </f:content>
        </f:SimpleForm>

        <HBox alignItems="Center">
            <Label text="{i18n>promoCode}:" class="sapUiTinyMarginEnd sapUiSmallMarginBegin"/>
            <Input id="discountCodeInput" value="" class="sapUiTinyMarginEnd"/>
            <Button text="{i18n>Submit}" press="submitDiscount" type="Emphasized" class="sapUiTinyMarginBeginEnd"/>
        </HBox>

    </Popover>
</core:FragmentDefinition>